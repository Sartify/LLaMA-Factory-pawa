{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: test_train",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/pawa/test_train.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "args": [
        "pawa/configs/pretrain-zulu/pawa_llamafactory.yaml"
      ]
    },
    {
      "name": "TorchRun Training Debug",
      "type": "python",
      "request": "launch",
      "module": "torch.distributed.run",
      "args": [
        "--nnodes",
        "1",
        "--nproc_per_node",
        "1",
        "--standalone",
        "tests/model/test_freeze.py"
      ],
      "console": "integratedTerminal",
      "env": {
        "WORLD_SIZE": "1"
      },
      "cwd": "${workspaceFolder}"
    }
  ]
}
